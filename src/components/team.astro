---
const team = [
  {
    name: "Jaime Chiarella",
    role: "CEO & Fundador, Riqra",
    image: "/team/jaime-chiarella.jpg",
    description: "Jaime es el fundador de una plataforma de comercio electrónico B2B SaaS que asiste a más de 200 pequeñas y medianas empresas en América Latina.",
    linkedin: "https://www.linkedin.com/in/jaimechiarella/",
    x: "#",
    dribbble: "#"
  },
  {
    name: "Jaime Sotomayor",
    role: "Managing Partner, Worthit",
    image: "/team/jaime-sotomayor.jpg",
    description: "Jaime invierte en startups de B2B SaaS que proporcionan la innovación esencial para la transformación de grandes organizaciones.",
    linkedin: "https://www.linkedin.com/in/jaimesotomayor/",
    x: "#",
    dribbble: "#"
  }
];
---
<section class="py-20 fadein-section bg-[var(--color-bg-light)]">
  <div class="max-w-6xl mx-auto px-4">
    <span class="block mx-auto text-center max-w-max uppercase text-xs font-semibold tracking-widest mb-3 px-3 py-1 rounded-full bg-[var(--color-primary)]/10 text-[var(--color-primary)]">NUESTRO EQUIPO</span>
<h2 class="text-4xl md:text-5xl font-bold text-center text-[var(--color-text)] mb-3">Nuestro <span class="font-bold text-[var(--color-primary)]">Equipo</span></h2>
    <p class="text-center text-lg text-[var(--color-text)]/70 mb-14">Conoce a los líderes detrás de PuntoSaaS.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      {team.map(member => (
        <div class="bg-white rounded-lg p-6 flex flex-col md:flex-row md:items-start gap-6 shadow-sm">
          <img src={`${import.meta.env.BASE_URL}team/${member.image.split('/').pop()}`} alt={member.name} class="w-full md:w-64 aspect-square object-cover rounded-md" loading="lazy" />
          <div class="flex-1 flex flex-col justify-between">
            <div>
              <h3 class="font-bold text-xl text-[var(--color-text)] mb-1">{member.name}</h3>
              <p class="text-md text-[var(--color-text)]/80 mb-2">{member.role}</p>
              {member.description && (
                <p class="text-[var(--color-text)]/90 text-base mb-4">{member.description}</p>
              )}
            </div>
            <div class="flex gap-4 mt-2">
              {member.linkedin && (
                <a href={member.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-[var(--color-text)] hover:text-[var(--color-primary)]"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.268c-.966 0-1.75-.785-1.75-1.75s.784-1.75 1.75-1.75 1.75.785 1.75 1.75-.784 1.75-1.75 1.75zm15.5 11.268h-3v-5.604c0-1.337-.025-3.063-1.868-3.063-1.868 0-2.154 1.459-2.154 2.968v5.699h-3v-10h2.881v1.367h.041c.401-.761 1.379-1.562 2.841-1.562 3.04 0 3.603 2.002 3.603 4.604v5.591z"/></svg></a>
              )}
              {member.x && (
                <a href={member.x} target="_blank" rel="noopener noreferrer" aria-label="X" class="text-[var(--color-text)] hover:text-[var(--color-primary)]"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 24 24"><path d="M17.53 2.47a.75.75 0 0 1 1.06 1.06L13.56 8.5l5.03 5.03a.75.75 0 0 1-1.06 1.06L12.5 9.56l-5.03 5.03a.75.75 0 1 1-1.06-1.06L10.44 8.5l-5.03-5.03a.75.75 0 1 1 1.06-1.06L12.5 7.44l5.03-5.03z"/></svg></a>
              )}
              {member.dribbble && (
                <a href={member.dribbble} target="_blank" rel="noopener noreferrer" aria-label="Dribbble" class="text-[var(--color-text)] hover:text-[var(--color-primary)]"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm7.938 8.001a8.004 8.004 0 0 0-5.168-5.17c1.434 1.805 2.522 4.007 3.216 6.39.101.003.203.005.304.005.563 0 1.118-.057 1.648-.167zm-2.134 7.644c2.07-2.665 2.584-5.972 2.64-6.329a8.049 8.049 0 0 1-1.85.21c-.146 0-.292-.004-.437-.011.052.23.099.462.14.697-2.864.36-5.852.35-8.693-.027a31.13 31.13 0 0 1 .527-1.02c-2.895-.87-5.036-2.45-5.25-2.606A8.013 8.013 0 0 1 12 4c1.69 0 3.252.527 4.535 1.425-.21.3-1.39 1.926-2.88 4.482a29.61 29.61 0 0 1 2.97.27c-.22-.54-.47-1.08-.75-1.61C17.112 7.65 18.71 9.57 19.938 12c-.255.018-.51.027-.767.027-.267 0-.534-.01-.8-.027a32.54 32.54 0 0 1-.567 1.37c.836.12 1.665.28 2.483.48zm-7.632 4.354A8.04 8.04 0 0 1 4.062 15.99c.43.31 2.124 1.46 4.69 2.23.13-.23.26-.46.4-.69-2.31-.65-4.06-1.61-4.21-1.7A8.06 8.06 0 0 0 12 20c.5 0 .99-.04 1.47-.11-.42-.58-1.53-2.05-2.194-3.895zm2.98-3.44c.62 1.29 1.32 2.5 2.08 3.6 1.86-.46 3.58-1.26 4.25-1.59a8.04 8.04 0 0 0 2.28-2.07c-.65-.18-1.33-.33-2.02-.44-.68 1.09-1.5 2.17-2.44 3.19-.6-.99-1.14-2.01-1.62-3.06-.82.09-1.66.14-2.51.14-.43 0-.86-.01-1.29-.03zm-6.07-5.16c.41.29 2.13 1.45 4.82 2.3-.38.7-.74 1.41-1.07 2.13-2.05-.29-3.63-.82-4.18-1.01a8.06 8.06 0 0 1 .43-3.42zm6.23 2.98c2.67.36 5.38.34 8.02-.06-.17-.6-.38-1.18-.62-1.75a27.13 27.13 0 0 0-2.62-.22c-1.24 2.07-2.26 4.01-2.82 5.09-.43-.01-.86-.03-1.28-.06-.36-.98-.76-2.01-1.19-3.06zm-2.43 4.38c.44.96.92 1.9 1.43 2.8-2.17-.57-3.81-1.44-4.2-1.67a8.1 8.1 0 0 1-1.68-2.13c.53.13 2.13.5 4.45.99z"/></svg></a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
