---
import { Tick } from "@/components/ui/icons";
import Link from "@/components/ui/link.astro";

const { plan } = Astro.props;
---

<div>
  <section class="py-20 fadein-section bg-white">
    <div class="container mx-auto p-4 md:p-6 lg:p-8">
      <div class="flex flex-col w-full order-first lg:order-none border-2 border-[var(--color-border)] border-opacity-50 py-5 px-6 rounded-md">
        <h2 class="text-4xl md:text-5xl font-bold text-center text-[var(--color-text)] mb-3">{plan.name}</h2>
        <p class="text-4xl font-bold text-center text-[var(--color-text)] mb-8">
          {
            plan.price && typeof plan.price === "object"
              ? plan.price.monthly
              : plan.price
          }
        </p>
        <!-- {
          plan.price.original && (
            <p class="text-xl font-medium text-gray-400 line-through md:text-2xl text-[var(--color-text-secondary)]">
              {plan.price.original}
            </p>
          )
        } -->
        <ul class="grid mt-8 gap-y-4">
          {
            plan.features.map((item) => (
              <li class="flex items-start gap-3 text-[var(--color-text)]">
                <Tick class="w-6 h-6" />
                <span>{item}</span>
              </li>
            ))
          }
        </ul>
        <div class="flex mt-8 justify-center">
          <Link
            href={plan.button.link || "#"}
            block
            style={plan.popular ? "primary" : "outline"}
            class="text-[var(--color-text)]"
          >
            {plan.button.text || "Get Started"}
          </Link>
        </div>
      </div>
      <!-- {
        plan.price.original && (
          <p class="mt-1 text-xl font-medium text-gray-400 line-through md:text-2xl">
            {plan.price.original}
          </p>
        )
      } -->
    </div><ul class="grid mt-8 text-left gap-y-4">
      {
        plan.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <Tick class="w-6 h-6" />
            <span>{item}</span>
          </li>
        ))
      }
    </ul><div class="flex mt-8">
      <Link
        href={plan.button.link || "#"}
        block
        style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>
