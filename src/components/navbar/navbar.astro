---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import BotonAplicar from "../ui/boton-aplicar.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Inicio",
    path: "#hero",
  },
  {
    title: "Sobre Nosotros",
    path: "#que-es-puntosaas",
  },
  {
    title: "Servicios",
    path: "#how-it-works",
  },
  {
    title: "Testimoniales",
    path: "#testimonios",
  },
];
---

<header class="sticky top-0 z-50 bg-white shadow-sm">
  <Container>
    <div class="flex flex-col lg:flex-row justify-between items-center py-3 transition-all duration-300">
      <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-[var(--color-primary)]">Punto</span><span
            class="text-slate-500">SaaS</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {menuitems.map((item) => (
            <li>
              <a
                href={item.path}
                class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900"
              >
                <span> {item.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </MenuItems>
      </Astronav>
      <div>
        <div class="hidden lg:flex items-center gap-4">
          <BotonAplicar href="#" class="!bg-[var(--color-accent)] !text-white !px-4 !py-2 !rounded !font-semibold !transition-all !duration-200 !hover:bg-[var(--color-accent-dark)]" />
        </div>
      </div>
    </div>
  </Container>
</header>
